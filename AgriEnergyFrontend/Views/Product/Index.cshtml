@using AgriEnergyFrontend.Model
@model List<Product>

<h2 class="text-center mt-4">Farm Products</h2>

<div class="container mt-4">
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Production Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary">Create new Product</a>
    </div>



</div>
